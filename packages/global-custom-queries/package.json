		"types:check": "tsc -p tsconfig.json",
		"types:export": "tsc -p tsconfig.export.json"
	},
	"devDependencies": {
		"@sardine/lightningcss-plugin-utils": "*",
		"@biomejs/biome": "2.4.4",
		"@tsconfig/node-lts": "24.0.0",
		"@tsconfig/strictest": "2.0.8",
		"@types/node": "24.10.13",
		"@vitest/coverage-v8": "4.0.18",
		"lightningcss": "1.31.1",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vitest": "4.0.18"
